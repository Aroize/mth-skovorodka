<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/sign_in_email"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="@dimen/login_margin"
        android:layout_marginEnd="@dimen/login_margin"
        android:layout_marginBottom="56dp"
        android:autofillHints="username"
        android:background="@drawable/rounded_rect_top_4dp"
        android:drawableStart="@drawable/ic_user"
        android:drawablePadding="8dp"
        android:hint="@string/sign_in_email"
        android:inputType="textEmailAddress"
        android:paddingStart="8dp"
        android:paddingEnd="0dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/sign_in_pwd"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:textSize="18sp"
        android:layout_marginStart="@dimen/login_margin"
        android:layout_marginEnd="@dimen/login_margin"
        android:background="@drawable/rounded_rect_bottom_4dp"
        android:drawableStart="@drawable/ic_view"
        android:drawablePadding="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="0dp"
        android:hint="@string/sign_in_pwd"
        android:inputType="textPassword"
        android:autofillHints="no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_in_email" />

    <Button
        android:id="@+id/sign_in"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:layout_width="200dp"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:text="@string/sign_in"
        app:background="@drawable/rounded_rect_4dp"
        app:backgroundTint="@color/turquoise"
        app:layout_constraintEnd_toEndOf="@+id/sign_in_pwd"
        app:layout_constraintStart_toStartOf="@+id/sign_in_pwd"
        app:layout_constraintTop_toBottomOf="@+id/sign_in_pwd" />

    <TextView
        android:id="@+id/sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/sign_up"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="@+id/sign_in"
        app:layout_constraintStart_toStartOf="@+id/sign_in"
        app:layout_constraintTop_toBottomOf="@+id/sign_in" />

</androidx.constraintlayout.widget.ConstraintLayout>